<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/report_maps_root"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/report_maps_button_back"
        style="?attr/floatingActionButtonSmallStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_chevron_left_24"
        app:backgroundTint="?attr/colorSurfaceContainerHigh"
        android:tint="?attr/colorOnSurface"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/kembali" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/report_maps_button_my_location"
        style="attr/floatingActionButtonLargelStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="24dp"
        android:contentDescription="@string/lokasi_saya"
        android:src="@drawable/ic_my_location_24"
        android:tint="?attr/colorOnTertiaryContainer"
        app:backgroundTint="?attr/colorTertiaryContainer"
        app:layout_constraintBottom_toTopOf="@+id/report_maps_card"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/report_map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".ui.form_post.ReportMapsFragment" />

    <com.google.android.material.card.MaterialCardView
        android:visibility="visible"
        android:id="@+id/report_maps_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="?attr/colorPrimaryContainer"
        app:strokeWidth="0dp"
        app:cardCornerRadius="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/report_map"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="16dp"
            android:paddingHorizontal="16dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?attr/textAppearanceTitleLarge"
                    android:textColor="?attr/colorOnPrimaryContainer"
                    android:layout_weight="1"
                    android:text="Lokasi Terpilih" />

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:scaleType="fitXY"
                    app:tint="?attr/colorOnPrimaryContainer"
                    android:src="@drawable/ic_campaign_24"/>

            </LinearLayout>



            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/report_maps_text_coordinate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Belum terpilih"
                android:textAppearance="?attr/textAppearanceBodyLarge"
                android:textColor="?attr/colorOnPrimaryContainer"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="22dp"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/report_maps_button_cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:text="Hapus Pilihan"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/report_maps_button_simpan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Simpan"/>



        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>

